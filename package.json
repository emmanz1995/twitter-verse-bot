{
  "name": "twitter-verse-bot",
  "version": "1.0.0",
  "description": "Twitter Verse Bot, to tweet Bible verses every Sunday Morning at 8:30am.",
  "main": "public/app.js",
  "scripts": {
    "test": "jest",
    "tsc": "tsc",
    "dev": "nodemon public/app.js",
    "start": "node public/app.js",
    "build": "tsc",
    "format": "prettier --write '{src,tests}/**/*.ts'"
  },
  "author": "Emmanuel Okuchukwu (emmanza2@gmail.com)",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/cron": "^2.0.1",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/lodash": "^4.14.195",
    "@types/mongoose": "^5.11.97",
    "@types/twit": "^2.2.31",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "cors": "^2.8.5",
    "cron": "^2.3.1",
    "dotenv": "^16.1.4",
    "exponential-backoff": "^3.1.1",
    "express": "^4.18.2",
    "inversify": "^6.0.1",
    "kafka-node": "^5.0.0",
    "lodash": "^4.17.21",
    "mongoose": "^7.2.2",
    "ts-retrofit": "^1.19.0",
    "twit": "^2.2.11",
    "twitter-api-v2": "^1.14.2",
    "uuidv4": "^6.2.13"
  },
  "jest": {
    "verbose": true,
    "roots": [
      "<rootDir>/"
    ],
    "testMatch": [
      "**/tests/**/*.+(ts|tsx|js)",
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/build/"
    ],
    "testEnvironment": "node"
  }
}
